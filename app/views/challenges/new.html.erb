<h1 align="center">Create a New Department Challenge</h1>

<%= form_for(@challenge, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="control-label col-md-1">
      <%= f.label :name %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :name, class: "form-control", placeholder: "Name of Challenge", autofocus: true %>
    </div>
    <div class="control-label col-md-1">
      <%= f.label :goal %>
    </div>
    <div class="col-md-4">
      <%= f.number_field :goal, class: "form-control", placeholder: 35000 %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-md-1">
      <%= f.label :start_date %>
    </div>
    <div class="col-md-4">
      <%= f.datetime_local_field :start_date, class: "form-control" %>
    </div>
    <div class="control-label col-md-1">
      <%= f.label :end_date %>
    </div>
    <div class="col-md-4">
      <%= f.datetime_local_field :end_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
